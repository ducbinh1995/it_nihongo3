<script>
      function exefunction(){
      return document.getElementById("rmb_checkbox").checked
    }
</script>
<div class="login">
  <div class="login-title">
    <h3>LOGIN</h3>
  </div>

  <div class="login-body">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= "イーメール" %>
      <%= f.email_field :email, class: 'form-control' %>
      <br/>

      <%= "パスワード" %>
      <%= link_to "(Forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>
      <br/>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, id: "rmb_checkbox"%>
        <span>Remember me</span>
      <% end %>

      <%= f.submit "ログイン", :name => "basic-login", :class => "btn btn-primary btn-block" %>
    <% end %>
  </div>

  <div class="facebook-login">
    <%= link_to "Facebookでログイン", "/auth/facebook", id: "sign_in",
        class: "btn btn-primary btn-block" %>
  </div>

  <div class="login-signup">
    <p>アカウントがない? <%= link_to "サインアップ", signup_path, class: "btn btn-primary" %></p>
  </div>
</div>
