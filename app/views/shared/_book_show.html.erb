<div class="book-detail">
  <div class="card">
    <div class="row">
      <div class="col-md-3" style="background-image: url(<%= @book.image.url %>); background-repeat: no-repeat; background-size: contain">
      </div>
      <div class="col-md-9">
        <div class="card-block">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <h4 class="card-title"><%= @book.title %></h4>
              <h6 class="card-subtitle mb-2 text-muted"><%= @book.author %></h6>
            </li>
            <li class="list-group-item">
              <nav class="card-text">
                <b>Publisher:</b> <%= @book.publisher %>
              </nav>
              <nav class="card-text">
                <b>Publish Date:</b> <%= @book.publish_date %>
              </nav>
              <nav class="card-text">
                <b>Isbn:</b> <%= @book.isbn %>
              </nav>
              <nav class="card-text">
                <b>Category:</b> <%= @book.categoryid %>
              </nav>
              <nav class="card-text">
                <b>Description:</b> <%= @book.description %>
              </nav>
            </li>
            <li class="list-group-item">
              <% if logged_in? and not current_user.admin? %>
                <%= link_to 'Write a Review',
                  new_review_path(:bookid => params[:id]), :class => "btn btn-primary"%>
              <% else %>
                <%= link_to 'Edit Info', edit_book_path(@book), :class => "btn btn-info" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="book-review">
  </div>
</div>

