<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col">
      <%= render partial: 'shared/book_show', locals: { book: @book } %>
    </div>
    <div class="col">
      <% if @book.reviews.any? %>
      <h3>Reviews (<%= @book.reviews.count %>)</h3>

      <% @reviews.each do |review| %>
        <%= User.find_by_id(review.user_id).name + "'s review    "%>
        <%= link_to 'Show', review %>
        <br>
      <% end %>
      <%= will_paginate @reviews, renderer: BootstrapPagination::Rails %>
    <% end %>
    </div>
  </div>
</div>
