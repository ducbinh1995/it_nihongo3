<%= form_with(model: book, local: true) do |form| %>
<% if book.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

  <ul>
    <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :title %>
  <%= form.text_field :title, id: :book_title, class: 'form-control' %>
</div>

<div class="field">
  <%= form.label :author %>
  <%= form.text_field :author, id: :book_author, class: 'form-control' %>
</div>

<div class="field">
  <%= form.label :isbn %>
  <%= form.text_field :isbn, id: :book_isbn, class: 'form-control' %>
</div>

<div class="field">
  <%= form.label :publisher %>
  <%= form.text_field :publisher, id: :book_publisher, class: 'form-control' %>
</div>

<div class="field">
  <%= form.label :publish_date %>
  <%= form.date_select :publish_date, id: :book_publish_date, class: 'form-control' %>
</div>

<div class="field">
  <%= form.label :categoryid %>
  <%= form.number_field :categoryid, id: :book_categoryid, class: 'form-control' %>
</div>

<div class="field">
  <%= "本の写真" %>
  <span class="picture">
  <%= form.file_field :image %>
  </span>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
