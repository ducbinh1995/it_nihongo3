<div class="container">
  <div class="row">
    <div class="col-sm-4">

      <div class="card">
        <div class="row">
          <div class="col-md-6">
            <div class="card-block">
              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <h4 class="card-title"><%= @review.book.title %></h4>
                  <h6 class="card-subtitle mb-2 text-muted"><%= @review.book.author %></h6>
                </li>
              </ul>
            </div>
          </div>
          <div class="col-md-6" style="background-image: url(<%= @review.book.image.url %>); background-repeat: no-repeat; background-size: contain">
          </div>
        </div>
      </div>
    </div>
    <div class="col-6">
      <h3>
        <%= simple_format(@review.title) %>
      </h3>

      <p>
        <%= simple_format(@review.content) %>
      </p>

      <% if logged_in? and @review.user == current_user %>
      <%= link_to 'Edit', edit_review_path(@review) %> |
      <% end %>
      <%= link_to 'Back', @review.book %>
    </div>
  </div>
</div>
