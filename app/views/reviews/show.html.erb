<div class="review-detail">
  <div class="content">
    <div class="row book">
      <div class="col-md-3 left-section">
      <%= image_tag @book.image.url, :class => "image" %>
      </div>
      <div class="col-md-9 right-section">
        <div class="card-block">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <h4 class="card-title"><%= @book.title %></h4>
              <h6 class="card-subtitle mb-2 text-muted"><%= @book.author %></h6>
            </li>
            <li class="list-group-item">
              <div class="card-text description">
                <h5>Description</h5>
                <p><%= @book.description %></p>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="review">
      <div class="row">
        <div class="col-md-1 avatar">
          <%= display_avatar @user, "50x50" %>
        </div>
        <div class="col-md-10 title">
          <h6 class="card-title">
            <b><%= @user.name %></b>
            rate this book
            <%= rating_for_user @book, @user, "original_score",
             {readonly: true}%>
          </h6>
          <h6 class="card-subtitle mb-2 text-muted">Post 2 days ago</h6>
        </div>
      </div>
      <div class="content">
        <h4><%= @review.title %></h4>
        <p class="review-content"><%= simple_format(@review.content) %></p>
      </div>
      <% if logged_in? %>
        <%= render partial: 'likes/like_button', locals: {review: @review} %>
      <% end %>
      <span id="count-like-<%= @review.id %>">
        <%= @review.likes.count %> people like this
      </span>
    </div>
    <% if logged_in? %>
    <div class="comment">
      <h4>Comment</h4>
      <div class="write-comment row">
        <div class="col-md-1">
          <%= display_avatar current_user, "38x38" %>
        </div>
        <div class="col-md-10">
          <%= render 'comments/create_form' %>
          <%= render 'comments/list' %>
        </div>
      </div>
    </div>
    <% if current_user.admin? %>
      <%= link_to 'Delete review', review, method: :delete, data: { confirm: 'Are you sure?'}, :class => "btn btn-info" %>
    <% end %>
    <% end %>
  </div>
</div>
